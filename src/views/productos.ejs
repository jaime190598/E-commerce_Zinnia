    <main>
        <section class="section-popular-ahora"> 
            <h2><%= products[0].category %></h2>
                <div class="text-popular">
                    <% products.forEach(product=>{ %>
                    <div class=img-1>
                    <img src="/images/img-1.png" class="section-img" alt="Cropped Jacket">
                    <h4 class="popular-h4"><%= product.name %></h4>
                    <p class="popular-p"><%= product.cost %> <br> <%= product.color %> <%= product.size %></p>
                    </div>
                    <% }) %>
               
                </div>
        </section>
    </main>
